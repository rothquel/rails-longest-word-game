<h1>Play the game:</h1>
<%= @letters %>
<form action="/score" method="Post" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="response" class="form-control" placeholder="What is the longest word you can find?">
  <input name="letters" type="hidden" value="<%= @letters %>" />
      <input type="submit" value="Play!" class="btn btn-primary mt-3">
</form>
