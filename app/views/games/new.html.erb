<div class="container">
  <h1 class="text-center py-5">Play the longest word game:</h1>
    <div class="row text-align-center justify-content-center">
      <% @letters.each do |letter| %>
          <h2 class="col-1 h-100 bg-primary py-5 m-2 text-center text-white"> <%=letter %></h2>
      <% end %>
      <form action="/score" method="Post" data-turbo="false">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <input type="text" name="response" class="form-control mt-5" placeholder="What is the longest word you can find?">
        <input name="letters" type="hidden" value="<%= @letters %>" />
            <input type="submit" value="Play!" class="btn btn-primary mt-3">
      </form>
    </div>
</div>
